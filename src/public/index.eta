<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library</title>
    <link rel="stylesheet" href="/css/index.css">
    <script type="module" src="/js/index.js"></script>
    <script type="module" src="/js/core.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>

</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="container-sidebar">
                <div class="sidebar-header">
                    <h2>Library APP</h2>
                </div>
                <ul class="sidebar-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/wishlist">Wishlist</a></li>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="#" id="logout-button">Log out</a></li>
                </ul>
            </div>
        </aside>
        <main class="main-content">
            <header class="header">
                <input type="text"id="search-input" placeholder="Search for name or author...">
                <div class="user-profile" id="user-profile">
                    <span>username</span>
                    <img src="images/images.jpg" alt="User Profile">
                </div>
            </header>
            <section class="content">
                <div class="section popular">
                    <h2>POPULAR</h2>
                    <div class="book-list">
                        <% if (it.data && it.data.length > 0) { %>
                            <% it.data.forEach(book => { %>
                                <div class="book-item">
                                    <a href="/detail-page/<%= book.book_id %>" >
                                        <img src="<%= book.thumbnail %>" alt="<%= book.title %>">
                                        <p><%= book.title %><br><span><%= book.authors.split('{').join('').split('}').join('').split('"').join('') %></span></p>
                                    </a>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No popular books available</p>
                        <% } %>
                    </div>
                </div>
                <div class="section recommended">
                    <h2>YOU MAY LIKE</h2>
                    <div class="book-list">
                        <% if (it.data && it.data.length > 0) { %>
                            <% it.data.forEach(book => { %>
                                <div class="book-item">
                                    <a href="/detail-page/<%= book.book_id %>" >
                                        <img src="<%= book.thumbnail %>" alt="<%= book.title %>">
                                        <p><%= book.title %><br><span><%= book.authors.split('{').join('').split('}').join('').split('"').join('') %></span></p>
                                    </a>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No recommended books available</p>
                        <% } %>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
